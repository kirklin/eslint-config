{
  "name": "@kirklin/eslint-config-monorepo",
  "version": "0.3.6",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "author": "Kirk Lin <linkirk@163.com> (https://github.com/kirklin)",
  "license": "MIT",
  "scripts": {
    "lint": "pnpm -r run stub && eslint .",
    "lint:fix": "pnpm -r run stub && eslint . --fix",
    "test": "pnpm -r run test",
    "build": "pnpm -r run build",
    "prepare": "pnpm -r run stub",
    "release": "bumpp -r && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@kirklin/eslint-config": "workspace:*",
    "bumpp": "^9.1.0",
    "eslint": "^8.40.0",
    "eslint-plugin-kirklin": "workspace:*",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  }
}
